<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.9.xsd">
    
    <grid name="calendar-grid" title="Calendars" model="com.axelor.apps.crm.db.Calendar">
        <field name="name"/>
    </grid>
    
    <form cols="4" name="calendar-form" title="Calendar" model="com.axelor.apps.crm.db.Calendar">
	    <field name="title"/>
	    <break/>
	    <group title="Connection settings" colSpan="4">
	        <field name="url"/>
	        <field name="typeSelect"/>
	        <field name="isSslConnection"/>
	        <field name="port"/>
	    </group>
	    <break/>
	    <separator title="Credentials" colSpan="4"/>
	    <break/>
	    <group colSpan="4">
	        <field name="login"/>
	        <field name="password" widget="password"/>
	    </group>
	</form>
    
   	 
</object-views>