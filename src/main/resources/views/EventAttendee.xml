<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.9.xsd">
    
    <grid name="event-attendee-contact-grid" title="Contacts" model="com.axelor.apps.crm.db.EventAttendee">
        <field name="statusSelect"/>
        <field name="contactPartner" domain="self.isContact = true" form-view="partner-contact-form" grid-view="partner-contact-grid"/>
    </grid>
    
    <form name="event-attendee-contact-form" title="Contact" model="com.axelor.apps.crm.db.EventAttendee" cols="2" colWidths="*,400">
    	<field name="statusSelect"/>
        <field name="contactPartner" domain="self.isContact = true" form-view="partner-contact-form" grid-view="partner-contact-grid"/>
    </form>
    
     <grid name="event-attendee-lead-grid" title="Leads" model="com.axelor.apps.crm.db.EventAttendee">
        <field name="statusSelect"/>
        <field name="lead"/>
    </grid>
    
    <form name="event-attendee-lead-form" title="Lead" model="com.axelor.apps.crm.db.EventAttendee" cols="2" colWidths="*,400">
    	<field name="statusSelect"/>
        <field name="lead"/>
    </form>
    
</object-views>